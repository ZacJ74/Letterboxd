<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Dashboard - Reel Keeper</title>
  <link rel="stylesheet" href="/styles.css" />
</head>
<body>
  <header>
    <h1>My Movie Dashboard</h1>
    <% if (userId) { %>
      <a href="/movies/new">Add New Movie</a>
      <a href="/movies/community">Community</a>
      <form action="/users/logout" method="POST" style="display:inline;">
        <button type="submit">Logout</button>
      </form>
    <% } else { %>
      <a href="/users/auth?mode=login">Login</a>
      <a href="/users/auth?mode=signup">Sign Up</a>
    <% } %>
  </header>

  <main>
    <% if (movies.length === 0) { %>
      <p>No movies added yet.</p>
    <% } else { %>
      <ul>
        <% movies.forEach(movie => { %>
          <li>
            <a href="/movies/<%= movie._id %>"><%= movie.title %> (<%= movie.year %>)</a>
            <span>Rating: <%= movie.rating %></span>
            
            <% if (movie.owner.toString() === userId) { %>
              <a href="/movies/<%= movie._id %>/edit">Edit</a>
              <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
              </form>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </main>
</body>
</html>
