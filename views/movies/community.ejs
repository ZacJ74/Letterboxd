<!DOCTYPE html>
<html>
<head>
  <title>Community Movies</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <div>
      <a href="/">Dashboard</a>
      <a href="/movies/community">Community</a>
    </div>
    <div>
      <a href="/users/logout" class="btn">Logout</a>
    </div>
  </nav>

  <h1>Community Watchlists</h1>

  <% if (Object.keys(moviesByUser).length === 0) { %>
    <p>No movies have been added yet.</p>
  <% } else { %>
    <% for (let username in moviesByUser) { %>
      <h2><%= username %>’s Watchlist</h2>
      <div class="movie-list">
        <% moviesByUser[username].forEach(movie => { %>
          <div class="movie-card">
            <% if (movie.imageUrl) { %>
              <img src="<%= movie.imageUrl %>" alt="Poster for <%= movie.title %>">
            <% } else { %>
              <p>No poster available</p>
            <% } %>

            <h3><a href="/movies/<%= movie._id %>"><%= movie.title %> (<%= movie.year %>)</a></h3>
            <p>⭐ Rating: <%= movie.rating %></p>
          </div>
        <% }) %>
      </div>
    <% } %>
  <% } %>
</body>
</html>
