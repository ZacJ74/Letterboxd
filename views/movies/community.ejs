<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community Movies - Reel Keeper</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h1>Community Movies</h1>
    <nav>
      <a href="/">Dashboard</a>
      <a href="/movies/new">New Movie</a>
      <a href="/movies/community">Community</a>
      <form action="/users/logout" method="POST" style="display:inline">
        <button type="submit">Logout</button>
      </form>
    </nav>
  </header>

 <main>
  <% if (Object.keys(moviesByUser).length === 0) { %>
    <p>No movies yet.</p>
  <% } else { %>
    <% for (let username in moviesByUser) { %>
      <h2><%= username %>'s Watchlist:</h2>
      <ul>
        <% moviesByUser[username].forEach(movie => { %>
          <li><%= movie.title %> (<%= movie.year %>) - Rating: <%= movie.rating %></li>
        <% }) %>
      </ul>
    <% } %>
  <% } %>
</main>


</body>
</html>
