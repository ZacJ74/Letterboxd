<!DOCTYPE html>
<html>
<head>
  <title>Edit <%= movie.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/nav') %>

  <h1>Edit Movie: <%= movie.title %></h1>

  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= movie.title %>" required>
    </div>
    <div>
      <label for="year">Year</label>
      <input type="number" id="year" name="year" value="<%= movie.year %>" required>
    </div>
    <div>
      <label for="rating">Rating</label>
      <input type="number" id="rating" name="rating" value="<%= movie.rating %>" step="0.1" required>
    </div>
    <div>
      <label for="imageUrl">Poster URL</label>
      <input type="text" id="imageUrl" name="imageUrl" value="<%= movie.imageUrl %>">
    </div>

    <div class="movie-card">
      <h2><%= movie.title %></h2>
<% if (movie.year) { %>
  <p class="movie-year">Year: <%= movie.year %></p>
<% } %>
<p>‚≠ê Rating: <%= movie.rating %></p>


      <div class="edit-actions-top">
        <!-- Update button -->
        <button type="submit" class="btn update-btn">Update Movie</button>

        <!-- Delete button -->
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" class="delete-form">
          <button type="submit" class="btn delete-btn">Delete Movie</button>
        </form>
      </div>

      <div class="edit-actions-bottom">
        <a href="/" class="btn back-btn">Back to Dashboard</a>
        <a href="/movies/community" class="btn back-btn">Back to Community</a>
      </div>
    </div>
  </form>
</body>
</html>
