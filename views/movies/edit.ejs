<!DOCTYPE html>
<html>
<head>
  <title>Edit <%= movie.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/nav') %>

  <h1>Edit Movie: <%= movie.title %></h1>

  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= movie.title %>" required>
    </div>
    <div>
      <label for="year">Year</label>
      <input type="number" id="year" name="year" value="<%= movie.year %>" required>
    </div>
    <div>
      <label for="rating">Rating</label>
      <input type="number" id="rating" name="rating" value="<%= movie.rating %>" step="0.1" required>
    </div>
    <div>
      <label for="imageUrl">Poster URL</label>
      <input type="text" id="imageUrl" name="imageUrl" value="<%= movie.imageUrl %>">
    </div>

    <!-- Only one movie-actions block -->
    <div class="movie-actions">
      <button type="submit" class="btn">Update Movie</button>

      <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
        <button type="submit" class="btn delete">Delete Movie</button>
      </form>

      <a href="/" class="btn">Back to Dashboard</a>
      <a href="/movies/community" class="btn">Back to Community</a>
    </div>
  </form>
</body>
</html>
