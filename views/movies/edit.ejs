


<!DOCTYPE html>
<html>
<head>
  <title>Edit Movie</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <div>
      <a href="/">Dashboard</a>
      <a href="/movies/community">Community</a>
    </div>
    <div>
      <a href="/users/logout" class="btn">Logout</a>
    </div>
  </nav>

  <h1>Edit Movie</h1>

  <form action="/movies/<%= movie._id %>?_method=PUT" method="POST">
    <div>
      <label for="title">Title</label>
      <input type="text" id="title" name="title" value="<%= movie.title %>" required>
    </div>

    <div>
      <label for="year">Year</label>
      <input type="number" id="year" name="year" value="<%= movie.year %>">
    </div>

    <div>
      <label for="rating">Rating</label>
      <input type="text" id="rating" name="rating" value="<%= movie.rating %>">
    </div>

    <div>
      <label for="imageUrl">Poster URL</label>
      <input type="url" id="imageUrl" name="imageUrl" value="<%= movie.imageUrl %>">
    </div>

    <button type="submit">Update Movie</button>
    <a href="/" class="btn">Back to Dashboard</a>
  </form>
</body>
</html>



