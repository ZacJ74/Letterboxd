<!DOCTYPE html>
<html>
<head>
  <title><%= movie.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/nav') %>   <!-- ✅ shared nav -->

  <div class="movie-card" style="max-width: 500px; margin: auto; text-align: center;">
    <div class="movie-poster">
      <% if (movie.imageUrl) { %>
        <img src="<%= movie.imageUrl %>" alt="Poster for <%= movie.title %>">
      <% } else { %>
        <p>No poster available</p>
      <% } %>
    </div>

    <div class="movie-details">
      <h1><%= movie.title %></h1>
      <% if (movie.year) { %>
        <p><strong>Year:</strong> <%= movie.year %></p>
      <% } %>
      <p class="movie-rating">⭐ Rating: <%= movie.rating %></p>

      <% if (movie.owner && movie.owner._id.toString() === userId) { %>
        <div class="movie-actions">
  <a href="/movies/<%= movie._id %>/edit" class="btn edit-btn">Edit</a>
  <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
    <button type="submit" class="btn delete-btn">Delete</button>
  </form>
</div>
      <% } %>

      <div class="back-links">
  <a href="/" class="btn back-btn">Back to Your Watchlist</a>
  <a href="/movies/community" class="btn back-btn">Back to Community</a>
</div>
    </div>
  </div>
</body>
</html>
