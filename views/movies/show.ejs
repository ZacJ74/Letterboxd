<!DOCTYPE html>
<html>
<head>
  <title><%= movie.title %></title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav>
    <div>
      <a href="/">Dashboard</a>
      <a href="/movies/community">Community</a>
    </div>
    <div>
      <a href="/users/logout" class="btn">Logout</a>
    </div>
  </nav>

  <div class="movie-card" style="max-width: 500px; margin: auto;">
    <% if (movie.imageUrl) { %>
      <img src="<%= movie.imageUrl %>" alt="Poster for <%= movie.title %>">
    <% } else { %>
      <p>No poster available</p>
    <% } %>

    <h1><%= movie.title %> (<%= movie.year %>)</h1>
    <p>‚≠ê Rating: <%= movie.rating %></p>

    <% if (movie.owner && movie.owner._id.toString() === userId) { %>
      <div>
        <a href="/movies/<%= movie._id %>/edit" class="btn">Edit</a>
        <form action="/movies/<%= movie._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </div>
    <% } %>

    <div style="margin-top: 15px;">
      <a href="/" class="btn">Back to Dashboard</a>
      <a href="/movies/community" class="btn">Back to Community</a>
    </div>
  </div>
</body>
</html>
