<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add a New Movie</title>
  <style>
    form {
      display: flex;
      flex-direction: column;
      max-width: 400px;
      margin: auto;
      gap: 10px;
    }
    label {
      font-weight: bold;
    }
    input, button {
      padding: 8px;
      font-size: 1rem;
    }
    #posterPreview {
      text-align: center;
      margin-top: 15px;
    }
    #posterPreview img {
      max-width: 200px;
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0,0,0,0.2);
    }
  </style>
</head>
<body>
  <h1 style="text-align:center;">Add a New Movie</h1>

  <form action="/movies" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" required>

    <label for="year">Year:</label>
    <input type="number" name="year" id="year">

    <label for="rating">Rating:</label>
    <input type="text" name="rating" id="rating">

    <label for="imageUrl">Poster URL:</label>
    <input 
      type="url" 
      name="imageUrl" 
      id="imageUrl" 
      placeholder="https://example.com/poster.jpg"
      oninput="previewPoster(this.value)"
    >

    <!-- Poster Preview -->
    <div id="posterPreview">
      <p><em>Poster preview will appear here...</em></p>
    </div>

    <button type="submit">Add Movie</button>
  </form>

  <script>
    function previewPoster(url) {
      const preview = document.getElementById('posterPreview');
      if (url && url.startsWith('http')) {
        preview.innerHTML = `<img src="${url}" alt="Poster preview">`;
      } else {
        preview.innerHTML = `<p><em>Poster preview will appear here...</em></p>`;
      }
    }
  </script>
</body>
</html>
